@model IEnumerable<eTickets.Models.Cinema>

@{
    ViewData["Title"] = "List of Cinema";
}

<div class="row align-middle">
    <div class="col-md-8 offset-md-8 align-middle">
        
        <table class="align-middle">
            <thead>
            <tr class="text-center">
                <th>@Html.DisplayNameFor(model => model.Logo)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width: 100px"/>
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(x => item.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(x => item.Description)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary"><i class="bi bi-pencil-square">Edit</i></a> |
                        <a class="btn btn-outline-info"><i class="bi bi-eye">Details</i></a> |
                        <a class="btn btn-danger"><i class="bi bi-trash">Delete</i></a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>