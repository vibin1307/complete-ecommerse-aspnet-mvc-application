@model IEnumerable<eTickets.Models.Actor>

@{
    ViewData["Title"] = "List of Actors";
}

<div class="row align-middle">
    <div class="col-md-8 offset-md-8 align-middle">
        
        <table class="align-middle">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width: 100px"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(x => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(x => item.Bio)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square">Edit</i></a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye">Details</i></a> |
                            <a class="btn btn-danger"><i class="bi bi-trash">Delete</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>